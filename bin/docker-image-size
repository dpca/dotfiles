#!/usr/bin/env bash

set -eo pipefail

image="$1"

if command -v docker > /dev/null; then
  docker inspect "$image" | jq '.[].Size' | numfmt --to=iec
elif command -v podman > /dev/null; then
  podman inspect "$image" | jq '.[].Size' | numfmt --to=iec
else
  echo "Docker and Podman both not found!"
  exit 1
fi
